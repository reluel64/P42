import os
import shutil
obj_list = []

linker_script = 'arch/x86_64/linker.ld'

env=Environment(
                ENV       = {'PATH' : os.environ['PATH'] + ':/home/alex/opt/cross/bin'},
                CCFLAGS   = '-ffreestanding -mno-red-zone -mno-mmx -mno-sse -mno-sse2 -mcmodel=large',
                LINKFLAGS = '-T ' + linker_script + ' -lgcc -z max-page-size=0x1000 -ffreestanding -nostdlib',
                CC        = 'x86_64-elf-gcc',
                CPPPATH   = [Dir("h"), Dir('acpica-unix2-20200326/include')] ,
                ASFLAGS   = '-felf64',
                tools     =['default', 'nasm'],
               )


               
build_scripts = [
                'kernel/Sconscript',
                'mm/Sconscript',
                'utils/Sconscript',
                'arch/x86_64/Sconscript',
                'acpica-unix2-20200326/Sconscript'
                ]

objects = SConscript(build_scripts, exports = 'env')

for obj in objects:
    for o in obj:
        obj_list.append(o)

Export('env')
#print(env['ENV']['PATH'])
kernel = env.Program(
                    target = 'kernel.bin', 
                    source=obj_list
                    )

#print Dir("h").path()
env.Install('/run/media/alex/4D7E-2E98', kernel)
env.Alias('install','/run/media/alex/4D7E-2E98')
env.Execute('sync')